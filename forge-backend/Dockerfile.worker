FROM node:18-alpine

WORKDIR /app

COPY package*.json ./
RUN npm ci --only=production

COPY src ./src
COPY config ./config
COPY drizzle.config.js ./
COPY worker.js ./
COPY supabase ./supabase

RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodeuser -u 1001 && \
    chown -R nodeuser:nodejs /app

USER nodeuser

ENV NODE_ENV=production

CMD ["node", "worker.js"]